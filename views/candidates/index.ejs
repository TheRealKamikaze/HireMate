<%- include('../partials/header.ejs'); %>
	<div class="container">
		<div class="row panel">
			<% candidates.forEach(function(candidate){ %>
				<div class="col-lg-3 col-md-3 col-sm-6 d-flex align-items-stretch job" >
					<div class="card" style="width: 18rem;">
					  <div class="card-body">
					  	<svg class="bi bi-card-image" width="2.5em" height="2.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
						  <path fill-rule="evenodd" d="M14.5 3h-13a.5.5 0 00-.5.5v9a.5.5 0 00.5.5h13a.5.5 0 00.5-.5v-9a.5.5 0 00-.5-.5zm-13-1A1.5 1.5 0 000 3.5v9A1.5 1.5 0 001.5 14h13a1.5 1.5 0 001.5-1.5v-9A1.5 1.5 0 0014.5 2h-13z" clip-rule="evenodd"/>
						  <path d="M10.648 7.646a.5.5 0 01.577-.093L15.002 9.5V13h-14v-1l2.646-2.354a.5.5 0 01.63-.062l2.66 1.773 3.71-3.71z"/>
						  <path fill-rule="evenodd" d="M4.502 7a1.5 1.5 0 100-3 1.5 1.5 0 000 3z" clip-rule="evenodd"/>
						</svg>
					    <h5 class="card-title"><%= candidate.name %></h5>
					    <h6 class="card-subtitle mb-2 text-muted"><%= candidate.job_title %> <br> <%= candidate.location %></h6>
					    <hr>
					    <p class="card-text">
						    <b> Experience:  </b>
							<%= candidate.experience %>
					    	&ensp;
					    	<b> Qualification:  </b>
							<%= candidate.qualification %>
					    </p>
					    <hr>
					    <br>
					    <p class="card-text">
					    	<b> Skills:  </b> &emsp; &emsp; &emsp;
							<% candidate.skills.forEach(function(skill){ %>
								<%=skill%>
							<% }) %>
					    </p>
					    <p class="card-text">
					    	<b> Additional Skills:  </b>
							<% candidate.additional_skills.forEach(function(skill){ %>
								<%=skill%>
							<% }) %>
					    </p>
					    <br>
					    <hr>
					    <button class="btn btn-outline-secondary"
							onClick="actionCandidate('accepted')">Accept </button>
						<button class="btn btn-outline-danger"  onClick="actionCandidate('rejected')"
						>Reject</button>
					  </div>
					</div>
					</div>
				<% }) %>
		</div>
	</div>


<script>
		function actionCandidate(status){
			alert("candidate: "+status)
		}

</script>

<%- include('../partials/footer.ejs'); %>
